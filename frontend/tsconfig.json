{
  "extends": "../tsconfig.json",

  "compilerOptions": {
    "allowJs": true,

    "target": "es2019",
    "module": "esnext",

    "jsx": "react",

    "baseUrl": "./src",
    "paths": {
      "components/*": ["./components/*"],
      "containers/*": ["./containers/*"],
      "utils/*": ["./utils/*"],
      "styles/*": ["./styles/*"],
      "vars/*": ["./vars/*"]
    }
  },

  "include": ["src"]
}
