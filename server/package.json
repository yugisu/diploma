{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prestart": "yarn workspace @diploma/shared build",
    "start": "nodemon --config nodemon.json",
    "prestart:once": "tsc --noEmit",
    "start:once": "cross-env NODE_ENV=development babel-node -x \".js,.ts\" ./src/index.ts",
    "build": "rimraf build/ && babel src --out-dir build --ignore **/*.test.ts -x \".js,.ts,.json\"",
    "test": "jest"
  },
  "dependencies": {
    "@diploma/shared": "0.0.0",
    "@prisma/client": "^2.21.2",
    "apollo-server-koa": "^2.23.0",
    "graphql": "^15.5.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/node": "^7.13.13",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.22",
    "@types/koa": "^2.13.1",
    "@types/koa-router": "^7.4.2",
    "@types/node": "^14.14.41",
    "babel-plugin-module-resolver": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prisma": "^2.21.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  }
}
